<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/logo_login"
                android:layout_marginTop="25dp"
                android:src="@drawable/pinterestlogo"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:layout_below="@+id/logo_login"
                android:id="@+id/tvTitle"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp"
                android:text="Login to see more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tvTitle"
                android:id="@+id/edtgmail"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:gravity="center"
                android:background="@drawable/shape"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <EditText
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/edtgmail"
                android:layout_marginLeft="35dp"
                android:id="@+id/edtPass"
                android:inputType="textPassword"
                android:gravity="center"
                android:singleLine="true"
                android:background="@drawable/shape"
                android:hint="Password"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/forgot_password"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/edtPass"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:text="forgot your password?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView

                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_password"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:onClick="login"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@color/colorAccent"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/or"
                android:layout_centerInParent="true"
                android:layout_below="@+id/btnLogin"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="OR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_below="@+id/or"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:id="@+id/btnFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:layout_width="300dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_marginRight="15dp"
                        android:src="@drawable/facebooklogo"
                        android:layout_width="30dp"
                        android:layout_height="20dp"/>
                    <View
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/gray"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:text="Continue with Facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/btnGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnFacebook"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/or"
                    android:backgroundTint="@color/gray"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:src="@drawable/googlelogo" />
                    <View
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/gray"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue with Google"
                        android:textColor="@color/colorAccent"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/signup"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnGoogle"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17dp"
                android:gravity="center"
                android:text="Not on yet? Sign up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/btnCreate"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Create a business account"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</RelativeLayout>